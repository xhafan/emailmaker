@if(Request.IsAuthenticated) {
    <text>Welcome <strong>@User.Identity.Name.Split('|')[0]</strong>!
    [ @Html.ActionLink("Change password", "ChangePassword", "Account") ][ @Html.ActionLink("Log Off", "LogOff", "Account") ]</text>
}
else {
    @:[ @Html.ActionLink("Log On", "LogOn", "Account") ]
}
