@using EmailMaker.Controllers
@model EmailMaker.Controllers.ViewModels.EmailTemplateModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage templates</h2>
<p>
    <a href="@(Html.UrlFromControllerMethod<TemplateController>(a => a.Create()))">Create template</a>
</p>
<table>
    <tr>
        <th></th>
        <th>Template Name</th>
    </tr>  
    @foreach (var item in Model.EmailTemplate)
    {
        <tr>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EmailTemplateId }) 
            </td>
            <td>
                @item.Name
            </td>
        </tr>        
    }   
</table>

